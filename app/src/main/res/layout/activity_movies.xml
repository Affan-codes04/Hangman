<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m"
    tools:context=".movies">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Movie Type"
        android:textSize="36dp"
        android:layout_marginTop="10dp"
        android:background="#000"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textAllCaps="true"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/bm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bollywood Movies"
                android:textSize="23dp"
                android:layout_marginLeft="130dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/bollymovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="28dp"
                android:textAllCaps="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#0288D1"
                android:onClick="set"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="220dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/hm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hollywood Movies"
                android:textSize="23dp"
                android:layout_marginLeft="130dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/hollymovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="28dp"
                android:textAllCaps="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#0288D1"
                android:onClick="set"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="360dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/km"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kollywood Movies"
                android:textSize="23dp"
                android:layout_marginLeft="130dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/kollymovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="28dp"
                android:textAllCaps="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#0288D1"
                android:onClick="set"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>